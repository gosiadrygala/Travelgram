<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="image" format="reference"/>
    <style name="Theme.Travelgram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:icon">@color/black</item>
        <item name="colorPrimary">@color/anotherMountain</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sun</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="image">@drawable/microsoftteams_image</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?colorOnSecondary</item>
        <item name="colorControlHighlight">?colorOnPrimary</item>
    </style>

    <style name="bottomNavFont">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">serif</item>
    </style>
</resources>